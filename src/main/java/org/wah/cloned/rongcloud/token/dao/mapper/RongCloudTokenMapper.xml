<mapper namespace="org.wah.cloned.rongcloud.token.dao.mapper.RongCloudTokenMapper">
    <resultMap id="token" type="org.wah.cloned.rongcloud.token.entity.RongCloudToken">
        <id     column="id"          property="id"         javaType="java.lang.String"/>
        <result column="account_id"  property="accountId"  javaType="java.lang.String"/>
        <result column="token"       property="token"      javaType="java.lang.String"/>
        <result column="app_key"     property="appKey"     javaType="java.lang.String"/>
        <result column="login_time"  property="loginTime"  javaType="java.util.Date"/>
        <result column="create_time" property="createTime" javaType="java.util.Date"/>
        <result column="update_time" property="updateTime" javaType="java.util.Date"/>
        <association property="user" resultMap="user" columnPrefix="u_"/>
    </resultMap>

    <resultMap id="user" type="org.wah.doraemon.entity.User">
        <id     column="id"           property="id"         javaType="java.lang.String"/>
        <result column="account_id"   property="accountId"  javaType="java.lang.String"/>
