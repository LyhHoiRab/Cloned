               id,
               from_user_id,
               to_user_id,
               content,
               object_name,
               send_time,
               receive_time,
               create_time
          ) VALUE (
               #{id,          jdbcType=VARCHAR},
               #{fromUserId,  jdbcType=VARCHAR},
               #{toUserId,    jdbcType=VARCHAR},
               #{content,     typeHandler=rongcloudMessageContentHandler},
               #{objectName,  typeHandler=rongcloudMessageTypeHandler},
               #{sendTime,    jdbcType=TIMESTAMP},
               #{receiveTime, jdbcType=TIMESTAMP},
               #{createTime,  jdbcType=TIMESTAMP}
          )
    </insert>

