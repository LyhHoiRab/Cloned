    <insert id="save">
        INSERT
          INTO rongcloud_allocation (
               id,
               rongcloud_user_id,
               probability,
               default_probability,
               create_time
          ) VALUE (
               #{id,                  jdbcType=VARCHAR},
               #{rongCloudUserId,     jdbcType=VARCHAR},
               #{probability,         jdbcType=DOUBLE},
               #{defaultProbability,  jdbcType=DOUBLE},
               #{createTime,          jdbcType=TIMESTAMP}
          )
    </insert>

    <update id="update">
        UPDATE rongcloud_allocation
         <set>
             <if test="rongCloudUserId != null and rongCloudUserId != ''">
                 rongcloud_user_id = #{rongCloudUserId, jdbcType=VARCHAR},
             </if>
             <if test="probability != null and probability >= 0">
                 probability = #{probability, jdbcType=DOUBLE},
             </if>
             <if test="defaultProbability != null and defaultProbability >= 0">
                 default_probability = #{defaultProbability, jdbcType=DOUBLE},
             </if>
             <if test="updateTime != null">
                 update_time = #{updateTime, jdbcType=TIMESTAMP},
             </if>
         </set>
          WHERE id = #{id}
    </update>

